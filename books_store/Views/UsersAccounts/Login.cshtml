<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

@{
    ViewData["Title"] = "Login";
}
@{
    Layout = null;
}
<div class="m-5 p-5 bg-light rounded-3">

    <h1 class="text-center">Login</h1>
    <hr />
    <div class="d-flex justify-content-center">
        <form asp-action="Login">
            <div class="form-group">
                <label class="control-label">Username</label>
                <input name="na" class="form-control" />
            </div>
            <div class="form-group">
                <label for="pa" class="control-label">Password</label>
                <input name="pa" type="password" class="form-control" /> <br />
            </div>
            <div class="text-center">
                <input type="submit" value="Login" class="btn btn-secondary ml-3 px-5 py-2 text-white" />
            </div>
            <p style="color:red"> @ViewData["message"]</p>
        </form>
    </div>
    <div class="d-flex justify-content-center">
        <a asp-action="Create" class="text-center">You don't have an account ?</a>
    </div>
</div>
