@model books_store.Models.Book

@{
    ViewData["Title"] = "Create";
}
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<h1 class="text-center">Order a Book</h1>
<hr />

<h4 class="text-center">Book Details</h4>
<hr />
<dl class="row">

    <div class="col-xl-5 col-sm-12">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.info)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.info)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.bookquantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bookquantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.price) DT
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.author)
        </dd>
    </div>
    <div class="col-xl-5 col-sm-12">
        <dt>
            Picture
        </dt>
        <dd>
            <img src="~/images/@Model.imgfile" height="350" weight="200"  />
            <br />@Model.imgfile

        </dd>
    </div>
</dl>

<hr/>
<h4 class="text-center">Order Details</h4>
<hr />
<div class="row">
    <div class="d-flex justify-content-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="bookId" value=@Model.Id />
            <div class="form-group">
                <label for="quantity" class="control-label">Quantity</label>
                <input name="quantity" class="form-control" />
            </div>
            <div class="text-center">
                <input type="submit" value="Buy" class="btn btn-secondary mx-auto my-2 py-2 px-5 text-white" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Books" asp-action="Catalogue">Back to Catalogue</a>
</div>

